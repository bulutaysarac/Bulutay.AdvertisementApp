@model AppUserSignInDto
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <form asp-action="SignIn" asp-controller="Account" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Username">Username : </label>
            <span class="text-danger">*</span>
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Password">Password : </label>
            <span class="text-danger">*</span>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe">
            <label class="form-check-label" asp-for="@Model.RememberMe">
                Remember Me
            </label>
        </div>
        <div class="mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    </form>
</div>