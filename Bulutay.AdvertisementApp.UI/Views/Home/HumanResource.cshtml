@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="accordion" id="accordionAdvertisements">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@Model[i].Id">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Model[i].Id" aria-expanded="@(i == 0)" aria-controls="collapse-@Model[i].Id">
                        @Model[i].Title
                    </button>
                </h2>
                <div id="collapse-@Model[i].Id" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="heading-@Model[i].Id" data-bs-parent="#accordionAdvertisements">
                    <div class="accordion-body">
                        @Html.Raw(Model[i].Description)
                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div>
                                    <a asp-action="Send" asp-controller="Application" asp-route-advertisementId="@Model[i].Id" class="d-block btn btn-outline-success mt-3">Apply</a>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-light text-center lead">
                                    <span>To apply you need to be signed in!</span>
                                    <a asp-action="SignIn" asp-controller="Account">Sign In</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>